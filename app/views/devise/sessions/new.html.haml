.header
.form
  .form__title
    %h2 ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form__email
      %h3 メールアドレス
      = f.email_field :email, placeholder: 'メールアドレス', autofocus: true, autocomplete: "email", class: 'form-input'
    .form__passward
      %h3 パスワード
      = f.password_field :password, placeholder: 'パスワード', autocomplete: "current-password", class: 'form-input'
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .form__submit
      = f.submit "ログイン", class: 'btn'
= render "devise/shared/links"
