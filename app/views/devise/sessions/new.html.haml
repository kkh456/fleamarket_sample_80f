.header
  = render "devise/header"
  = render "devise/shared/error_messages"
.form
  .form__title
    ログイン
  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
    .form__email.form-item
      メールアドレス
      %br
      = f.email_field :email, placeholder: 'メールアドレス', autofocus: true, autocomplete: "email" ,placeholder: '例)example@mail.com', class: 'form-input'
    .form__passward.form-item
      パスワード
      %br
      = f.password_field :password, placeholder: 'パスワード', autocomplete: "current-password", placeholder: '7文字以上', class: 'form-input'
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .form__submit
      = f.submit "ログイン", class: 'btn'
= render "devise/shared/links"
.footer
  =render "devise/footer"
