.header
  .headerContents
    .mainHeader
      .icon 
        = link_to image_tag('logo.png'), root_path
      .searchForm
        = form_with(url: search_products_path, local: true, method: :get, class: "search-form") do |f|
          =f.text_field :keyword, placeholder: "キーワードから探す", class: "searchForm__input"
          %button{type: "submit", class: "search--btn"}
            = image_tag("icon-search 1.png")
    .navBar
      %ul.leftContents
        %li.leftContents__item
          =link_to 'カテゴリー', "#"
        %li.leftContents__item
          = link_to 'ブランド', "#"
      %ul.rightContents
        %li.rightContents__login
          -if user_signed_in?
            = link_to 'マイページ', "#"
            = link_to "ログアウト", destroy_user_session_path, method: :delete
          -else
            =link_to 'ログイン', new_user_session_path
            %li.rightContents__signup
              = link_to '新規会員登録', new_user_registration_path