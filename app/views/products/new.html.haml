= form_with model: @product, class: "Form", local: true do |f|
  = f.text_field :product_name, class: 'form', placeholder: '商品名'
  = f.fields_for :images do |i|
    = i.file_field :src
  = f.fields_for :images do |i|
    = i.file_field :src
  = f.text_field :product_explanation, class: 'form', placeholder: '商品説明'
  = f.text_field :brand, class: 'form', placeholder: 'ブランド'
  = f.text_field :product_status, class: 'form', placeholder: '商品状態'
  = f.text_field :shipping_method, class: 'form', placeholder: '発送方法'
  = f.text_field :shipping_charge, class: 'form', placeholder: '配送料の負担'
  = f.text_field :shipping_area, class: 'form', placeholder: '発送地域'
  = f.text_field :days_until_shipiing, class: 'form', placeholder: '発送までの日数'
  = f.text_field :price, class: 'form', placeholder: '価格'
  = f.submit '出品', class: 'Form__submit'