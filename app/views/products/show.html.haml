.header
   = render partial: "items/header"

.main
   .showMain
      .content
         .itemBox
            %h1.productName
               = @product.product_name

            .productImage
               -# 商品画像
               - @product.images.each do |image|
                  = image_tag image.src.url
                  -# size: "220x220"

            .productPrice
               = @product.price

            .productExplanation
               商品説明
               = @product.product_explanation

            .productUserId
               出品者
               = @product.user.nickname

            .productBrand
               ブランド(任意)
               = @product.brand

            .productProductStatusId
               商品の状態
               = @product.product_status_id

            .productShippingMethodId
               発送方法
               = @product.shipping_method_id

            .productShippingChargeId
               配送料の負担
               = @product.shipping_charge_id

            .productPrefectureId
               発送地域
               = @product.prefecture_id

            .productDaysUntilShippingId
               配送までの日数
               = @product.days_until_shipping_id

            

   - if user_signed_in? && current_user.id != @product.user_id
      = link_to "購入画面", "#"


   - if user_signed_in? && current_user.id == @product.user_id
      = link_to "編集", "#"
      = link_to "削除", "#"


.footer
   = render partial: "items/footer"
