.product
   .productName
      商品名
      = @product.product_name

   .productImage
      商品画像
      = image_tag @product

   .productExplanation
      商品説明
      = @product.product_explanation

   .productBrand
      ブランド(任意)
      = @product.brand

   .productProductStatusId
      商品の状態
      = @product.product_status_id

   .productShippingMethodId
      発送方法
      = @product.shipping_method_id

   .productShippingChargeId
      配送料の負担
      = @product.shipping_charge_id

   .productPrefectureId
      発送地域
      = @product.prefecture_id

   .productDaysUntilShippingId
      配送までの日数
      = @product.days_until_shipping_id

   .productPrice
      価格
      = @product.price





